	parameter: ""
	step: 1
	limits: [0, 99999999]
	text: ""
	textMagnitude: 0.4
	value: 0
	iconColor: [1,1,1,.3] 
	RoundedButton:
		id: decrement
		size_hint_x: None
		width: root.height
